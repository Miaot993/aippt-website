  class ThemeToggle extends HTMLElement {
    constructor() {
      super();
      const button = this.querySelector("button");

      button?.addEventListener("click", () => {
        const root = document.documentElement;

        // åˆ¤æ–­å½“å‰æ˜¯ä¸æ˜¯æš—è‰²
