  // é˜²æ­¢æœ‰äººæ‰‹åŠ¨ä¿®æ”¹ HTML å±æ€§åå¼ºè¡Œè®¿é—®
  (function () {
    const role = localStorage.getItem("user_role") || "lite";

    // æ‹¦æˆªéæ³•è®¿é—®
    if (role !== "pro" && window.location.pathname.includes("/pro/")) {
      window.stop();
