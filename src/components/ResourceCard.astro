---
import { Icon } from '@astrojs/starlight/components';

const { title, description, href, date, tag = "Article" } = Astro.props;
---

<a href={href} class="group flex flex-col gap-4 p-6 bg-white dark:bg-zinc-900 border border-gray-200 dark:border-zinc-800 rounded-lg hover:border-gray-300 dark:hover:border-zinc-700 transition-all duration-300 no-underline h-full overflow-hidden hover:shadow-lg hover:-translate-y-1">
  
  <div class="flex items-center justify-between">
    <span class="px-2.5 py-0.5 text-xs font-medium text-zinc-500 bg-zinc-100 dark:bg-zinc-800 dark:text-zinc-400 rounded-full">
      {tag}
    </span>
    {date && <span class="text-xs font-mono text-gray-400">{date}</span>}
  </div>

  <div class="flex flex-col gap-2">
    <h4 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 leading-snug transition-colors">
      {title}
    </h4>
    <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-2 leading-relaxed">
      {description}
    </p>
  </div>

</a>